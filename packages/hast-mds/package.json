{
  "name": "hast-mds",
  "version": "0.1.0",
  "description": "Framework-agnostic parser for MDS (Markdown Steps) format, producing HAST output",
  "license": "MIT",
  "author": "Matthias Reis",
  "keywords": [
    "markdown",
    "parser",
    "hast",
    "slides",
    "presentation",
    "remark",
    "rehype",
    "mds"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": ["dist", "README.md", "LICENSE"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "yaml": "^2.7.0",
    "rehype-katex": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.1",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@types/hast": "^3.0.4",
    "@types/mdast": "^4.0.4",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^3.0.0"
  }
}
